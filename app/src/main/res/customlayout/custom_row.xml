<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="123dp"
        android:layout_marginTop="3dp" android:orientation="horizontal" android:padding="10dp"
        android:weightSum="100" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">

        <TextView android:id="@+id/tvCustomRowID" android:layout_width="99dp"
            android:layout_height="wrap_content" android:layout_margin="10dp"
            android:layout_weight="40" android:text="@string/id" android:textSize="30sp" />

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="33.3" android:orientation="vertical">

            <TextView android:id="@+id/tvCustomRowName" android:layout_width="316dp"
                android:layout_height="wrap_content" android:layout_margin="10dp"
                android:text="@string/textview" android:textSize="20sp" tools:text="Name" />

            <TextView android:id="@+id/tvCustomRowTown" android:layout_width="319dp"
                android:layout_height="wrap_content" android:layout_margin="10dp"
                android:text="Town" android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>